<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tower of Hanoi"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#f4f4f4">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Thanh điều khiển -->
            <RowDefinition Height="*"/>
            <!-- Canvas -->
            <RowDefinition Height="Auto"/>
            <!-- Trạng thái -->
        </Grid.RowDefinitions>

        <!-- ===== Thanh điều khiển ===== -->
        <Border Grid.Row="0"
                BorderBrush="#cccccc"
                BorderThickness="1"
                Padding="8"
                Background="White">

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <TextBlock Text="Số đĩa:"
                           VerticalAlignment="Center"
                           Margin="0,0,4,0"/>

                <TextBox x:Name="DiskCountTextBox"
                         Width="50"
                         Text="3"
                         Margin="0,0,12,0"
                         PreviewTextInput="NumberOnly"/>

                <TextBlock Text="Thuật toán:"
                           VerticalAlignment="Center"
                           Margin="0,0,4,0"/>

                <ComboBox x:Name="AlgorithmComboBox"
                          Width="130"
                          Margin="0,0,12,0">
                    <ComboBoxItem Content="Recursive" IsSelected="True"/>
                    <ComboBoxItem Content="Iterative"/>
                    <ComboBoxItem Content="NonRecursive"/>
                </ComboBox>

                <Button x:Name="RunButton"
                        Content="Run"
                        Width="70"
                        Margin="0,0,6,0"
                        Click="Run_Click"/>

                <Button x:Name="PauseButton"
                        Content="Pause"
                        Width="70"
                        Margin="0,0,6,0"
                        IsEnabled="False"
                        Click="Pause_Click"/>

                <Button x:Name="ResumeButton"
                        Content="Resume"
                        Width="80"
                        Margin="0,0,6,0"
                        IsEnabled="False"
                        Click="Resume_Click"/>

            </StackPanel>
        </Border>

        <!-- ===== Canvas minh hoạ ===== -->
        <Border Grid.Row="1"
                BorderBrush="#cccccc"
                BorderThickness="1"
                Background="White"
                Margin="0,8,0,8">

            <Viewbox Stretch="Uniform">
                <Canvas x:Name="MainCanvas"
                        Width="900"
                        Height="480"
                        Background="White"/>
            </Viewbox>
        </Border>

        <!-- ===== Thanh trạng thái ===== -->
        <Border Grid.Row="2"
                BorderBrush="#cccccc"
                BorderThickness="1"
                Padding="6"
                Background="#fafafa">

            <TextBlock x:Name="StepDescription"
                       FontSize="14"
                       Text="Sẵn sàng."
                       TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>
