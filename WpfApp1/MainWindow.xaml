<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tháp Hà Nội - Đồ án CTDL" Height="700" Width="1000" 
        Background="#2C3E50" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1A252F" Margin="10" Padding="15" CornerRadius="8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Số đĩa:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="TxtDisk" x:FieldModifier="public" Width="40" Text="3" VerticalAlignment="Center" Margin="0,0,15,0" 
                         TextAlignment="Center" Padding="3" Background="#34495E" Foreground="White" BorderThickness="0"/>

                <Button x:Name="BtnCreate" x:FieldModifier="public" Content="1. Khởi tạo +" Click="BtnCreate_Click" Background="#27AE60" Margin="0,0,20,0"/>

                <TextBlock Text="2. Thuật toán:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="CbAlgorithm" Width="160" VerticalAlignment="Center" SelectedIndex="0" 
                          Background="#34495E" Foreground="Black">
                    <ComboBoxItem Content="Đệ quy (Recursive)"/>
                    <ComboBoxItem Content="Phi đệ quy"/>
                </ComboBox>

                <Button x:Name="BtnStart" x:FieldModifier="public" Content="3. Bắt đầu ▶" Click="BtnStart_Click" 
                        Background="#2980B9" FontWeight="Bold" Margin="15,0" Width="120"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="White" Margin="10,0" CornerRadius="5">
            <Canvas x:Name="MainCanvas" x:FieldModifier="public" ClipToBounds="True"/>
        </Border>

        <Border Grid.Row="2" Background="#1A252F" Padding="10" Margin="0,10,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="StepText" Text="Bước: 0" Foreground="#ECF0F1" Width="150"/>

                    <TextBlock Text="Tốc độ:" Foreground="White" VerticalAlignment="Center" Margin="20,0,10,0"/>
                    <Slider x:Name="DelaySlider" Minimum="50" Maximum="1000" Value="400" Width="150" 
                            ValueChanged="DelaySlider_ValueChanged" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button x:Name="BtnPause" x:FieldModifier="public" Content="⏸ Tạm dừng" Click="BtnPause_Click" Margin="5,0" Width="90" Background="#E67E22"/>
                    <Button x:Name="BtnResume" x:FieldModifier="public" Content="⏵ Tiếp tục" Click="BtnResume_Click" Margin="5,0" Width="90" Background="#16A085"/>
                    <Button x:Name="BtnStats" x:FieldModifier="public" Content="📊 Thống kê" Click="BtnStats_Click" Margin="5,0" Width="90" Background="#8E44AD"/>
                    <Button x:Name="BtnStop" x:FieldModifier="public" Content="⏹ Dừng hẳn" Click="BtnStop_Click" Background="#C0392B" Margin="5,0" Width="90"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>