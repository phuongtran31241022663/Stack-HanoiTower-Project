<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tower of Hanoi" Height="600" Width="900" Background="#222">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
            <!-- Style margin chung cho các phần tử bên trong -->
            <StackPanel.Resources>
                <Style TargetType="FrameworkElement">
                    <Setter Property="Margin" Value="5,0,0,0"/>
                </Style>
            </StackPanel.Resources>

            <TextBlock Text="Số đĩa:" Foreground="White" VerticalAlignment="Center"/>
            <TextBox x:Name="DiskCountTextBox" Width="60" Text="3"/>

            <TextBlock Text="Thuật toán:" Foreground="White" VerticalAlignment="Center"/>
            <ComboBox x:Name="AlgorithmComboBox" Width="130">
                <ComboBoxItem Content="Recursive" IsSelected="True"/>
                <ComboBoxItem Content="Iterative"/>
                <ComboBoxItem Content="NonRecursive"/>
            </ComboBox>

            <Button x:Name="RunButton" Content="▶ Bắt đầu" Width="100" Click="Run_Click"/>
            <Button x:Name="PauseButton" Content="⏸ Dừng" Width="80" Click="Pause_Click"/>
            <Button x:Name="ResumeButton" Content="⏯ Tiếp tục" Width="90" Click="Resume_Click"/>
            <Button x:Name="StepButton" Content="⏭ Bước" Width="80" Click="Step_Click"/>
        </StackPanel>

        <!-- Canvas vẽ cọc và đĩa -->
        <Canvas x:Name="MainCanvas" Grid.Row="1" Background="#333" ClipToBounds="True"/>
    </Grid>
</Window>
