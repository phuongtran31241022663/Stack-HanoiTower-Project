<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tháp Hà Nội - Stack mô phỏng" Height="500" Width="900">
    <Grid>
        <Canvas Name="GameArea" Background="#EEE" Margin="10,10,10,60"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Số đĩa:" FontWeight="Bold" Margin="10"/>
            <TextBox x:Name="InputBox" Width="60" Text="3" Margin="5" Height="20"/>
            <Button x:Name="StartButton" Content="Bắt đầu" Width="100" Margin="10" Click="StartButton_Click"/>
            <Button x:Name="StopButton" Content="Dừng" Width="100" Margin="10" Click="StopButton_Click"/>
            <Button x:Name="ContinueButton" Content="Tiếp tục" Width="100" Margin="10" Click="ContinueButton_Click"/>
            <Label x:Name="StepLabel" Content="Bước: 0" FontWeight="Bold" Margin="20,0,0,0" Height="27"/>
        </StackPanel>
    </Grid>
</Window>
